<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:background="@color/theme_white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/item_info_rl"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">

        <View
            android:id="@+id/icon_jl"
            android:layout_width="3dp"
            android:layout_height="18.5dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:background="#2c6eb2" />

        <TextView
            android:id="@+id/order_info_product_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/icon_jl"
            android:text="云控100控"
            android:textColor="#333"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/order_info_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/icon_jl2"
            android:text="2017年07月07日"
            android:textColor="#333"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/icon_jl2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:src="@mipmap/icon_arr" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginRight="@dimen/margin_left_content"
        android:layout_marginLeft="@dimen/margin_left_content"
        android:background="@color/content_split_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="15dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="客户姓名"
            android:textColor="#333"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/order_info_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:text="司马懿"
            android:textColor="#333"
            android:textSize="15sp" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginRight="@dimen/margin_left_content"
        android:layout_marginLeft="@dimen/margin_left_content"
        android:background="@color/content_split_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="15dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="付款金额"
            android:textColor="#333"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/order_info_money_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:text="100000"
            android:textColor="#333"
            android:textSize="15sp" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginRight="@dimen/margin_left_content"
        android:layout_marginLeft="@dimen/margin_left_content"
        android:background="@color/content_split_gray" />


</LinearLayout>