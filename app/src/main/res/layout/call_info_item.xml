<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/item_call_log"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp">

        <TextView
            android:id="@+id/info_item_time"
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:gravity="center"
            android:text="14:20"
            android:textColor="#333333"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/info_item_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_toRightOf="@id/info_item_time"
            android:gravity="center"
            android:text="呼出电话"
            android:textColor="#333333"
            android:textSize="13sp" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/player_iv"
            android:background="@mipmap/play_s"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/info_item_type"/>

        <TextView
            android:id="@+id/info_item_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:text="1小时10分钟20秒"
            android:textColor="#333333"
            android:textSize="13sp" />
    </RelativeLayout>


</LinearLayout>