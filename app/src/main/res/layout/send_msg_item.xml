<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">
    <TextView
        android:id="@+id/msg_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/shape_time_drawable"
        android:text="早上11:44"
        android:padding="4dp"
        android:textSize="12sp"
        android:textColor="#fff"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        />

    <ImageView
        android:layout_below="@id/msg_time_tv"
        android:id="@+id/user_photo_iv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="fitXY"
        android:layout_alignParentRight="true"
        android:src="@mipmap/login_logo" />

    <TextView
        android:layout_below="@id/msg_time_tv"
        android:id="@+id/send_msg_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@id/user_photo_iv"
        android:gravity="center_vertical"
        android:background="@drawable/d"
        android:text="sfdsdfsdmfnskdfmnsknflks\nskfnskldnflks\jsnfknsldfsmd\njskfnksdnfks\nsdhfksjdhkfjskd"
        android:textColor="#333"
        android:textSize="14sp"
        android:visibility="gone" />

    <TextView
        android:layout_below="@id/msg_time_tv"
        android:id="@+id/send_voice_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@id/user_photo_iv"
        android:background="@drawable/animation_send_voice"
        android:gravity="center_vertical"
        android:text="" />
    <TextView
        android:layout_below="@id/msg_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/msg_time"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:layout_toLeftOf="@id/send_voice_tv"
        android:text="3''"/>


</RelativeLayout>