<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@null"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounder_white_draw"
        android:paddingBottom="@dimen/margin_left_content"
        android:layout_marginBottom="@dimen/margin_left_content"
        android:layout_marginLeft="@dimen/margin_left_content"
        android:layout_marginRight="@dimen/margin_left_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_left_content"
            android:layout_marginTop="@dimen/margin_left_content"
            android:text=""
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_size_content" />

        <LinearLayout
            android:layout_marginTop="@dimen/margin_left_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_time_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_left_content"
                android:text="停留时间："
                android:textColor="@color/text_black"
                android:textSize="@dimen/text_size_content" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_left_content"
                android:text=""
                android:textColor="@color/text_black"
                android:textSize="@dimen/text_size_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_address_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_left_content"
                android:layout_marginTop="@dimen/margin_left_content"
                android:text="详细地址："
                android:textColor="@color/text_black"
                android:textSize="@dimen/text_size_content" />

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_left_content"
                android:layout_marginTop="@dimen/margin_left_content"
                android:ellipsize="end"
                android:maxLines="3"
                android:text=""
                android:textColor="@color/text_black"
                android:textSize="@dimen/text_size_content" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>