<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <LinearLayout
            android:layout_width="245dp"
            android:layout_height="194dp"
            android:background="@drawable/shape_dialog_all"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="69dp"
                android:gravity="center"
                android:maxLength="8"
                android:textColor="@color/text_black"
                android:textSize="@dimen/text_size_content" />

            <LinearLayout
                android:layout_width="215dp"
                android:background="@drawable/shape_input_0"
                android:layout_height="@dimen/height_button_list">

                <EditText
                    android:id="@+id/et_content"
                    android:maxLength="10"
                    android:maxLines="1"
                    android:paddingLeft="@dimen/margin_content_split"
                    android:paddingRight="@dimen/margin_content_split"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/text_size_content"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/content_split_gray_line"></LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp">

                        <TextView
                            android:id="@+id/btn_cancel"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="取消"
                            android:textColor="@color/text_black"
                            android:textSize="@dimen/text_size_content" />

                        <TextView
                            android:id="@+id/btn_ok"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="确定"
                            android:textColor="@color/theme_blue"
                            android:textSize="@dimen/text_size_content" />
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"></LinearLayout>
</LinearLayout>