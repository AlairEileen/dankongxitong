<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:id="@+id/msg_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/shape_time_drawable"
        android:text="早上11:44"
        android:padding="4dp"
        android:textColor="#fff"
        android:layout_marginTop="5dp"
        android:textSize="12sp"
        android:layout_marginBottom="5dp"
        />

    <RelativeLayout
        android:layout_below="@+id/msg_time_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:id="@+id/getter_iv"
            android:scaleType="fitXY"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/login_logo" />

        <TextView
            android:id="@+id/msg_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/getter_iv"
            android:gravity="center_vertical"
            android:background="@drawable/d_2"
            android:text="                "
            android:textColor="#333"
            android:textSize="14sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/get_voice_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/getter_iv"
            android:background="@drawable/animation_get_voice"
            android:text="             " />

        <TextView
            android:id="@+id/msg_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/get_voice_tv"
            android:text="2''"
            android:textColor="#a4a4a4"
            android:textSize="14sp" />

    </RelativeLayout>


</RelativeLayout>