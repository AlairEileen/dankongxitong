    <LinearLayout
        android:id="@+id/ll_type_url"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_content_split"
        android:background="@color/content_split_gray"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="visible">

        <ImageView
            android:scaleType="centerCrop"
            android:id="@+id/iv_icon_url"
            android:layout_width="48dp"
            android:layout_height="48dp"
            />

        <TextView
            android:id="@+id/tv_title_url"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin_left_content"
            android:layout_marginRight="@dimen/margin_bottom_content"
            android:gravity="center_vertical|left"
            android:lineSpacingExtra="3dp"
            android:maxLines="2"
            android:overScrollMode="never"
            android:text="43432433fdsfdsfdsfjdskjfdsjfjdsflkdjfkdsjfkdsljfdjkj"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_size_content" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_content_split">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right|center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/pic_sdv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_bq" />

            <TextView
                android:id="@+id/tv_matter_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_content_split"
                android:text="微信精选"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/text_size_content" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="23.5dp"
                android:src="@mipmap/icon_zz" />

            <TextView
                android:id="@+id/tv_matter_another"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_content_split"
                android:text="摘自网络资源"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/text_size_content" />
